<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Expenses" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/milky_white</item>
        <item name="colorPrimary">@color/blue</item>
<!--        <item name="fontFamily">@font/antipasto</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textColor">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSurface">@color/blue</item>
        <item name="colorControlNormal">@color/blue</item>
    </style>
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/rounded_background</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="android:textColorPrimaryInverse">@color/milky_white</item>
        <item name="android:textColorSecondary">@color/blue</item>
        <item name="android:textColorSecondaryInverse">@color/milky_white</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>
    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>